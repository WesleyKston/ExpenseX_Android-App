<?xml version="1.0" encoding="utf-8"?>
<!-- Rounded white background with subtle stroke for the floating bottom nav container -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- background -->
    <solid android:color="#FFFFFF" />

    <!-- rounded corners -->
    <corners android:radius="0dp" />

    <!-- subtle stroke to separate from content -->
    <stroke
        android:width="1dp"
        android:color="#E6E6E6" />

    <!-- inner padding to allow shadow space on some devices (not actual shadow) -->
    <size android:height="78dp" />
</shape>
