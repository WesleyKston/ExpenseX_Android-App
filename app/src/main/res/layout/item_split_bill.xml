<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_card_home"
    android:elevation="3dp"
    android:clipToOutline="true"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="2dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/ivSplitIcon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_split"
        android:background="@drawable/bg_avatar_circle"
        android:tint="#5161F1"
        android:padding="8dp"
        android:layout_marginEnd="10dp" />

    <!-- Text Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvSplitTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner Split"
            android:textColor="#252243"
            android:textStyle="bold"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Members -->
        <TextView
            android:id="@+id/tvSplitMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nathan, Ryan, Wesley"
            android:textColor="#777"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Date -->
        <TextView
            android:id="@+id/tvSplitDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Nov 2025"
            android:textColor="#A1A1A1"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Amount + Share -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvSplitAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹1200"
            android:textStyle="bold"
            android:textColor="#5161F1"
            android:textSize="15sp"
            android:gravity="end" />

        <TextView
            android:id="@+id/tvEachShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Each ₹400"
            android:textColor="#6B6B6B"
            android:textSize="12sp"
            android:gravity="end" />
    </LinearLayout>
</LinearLayout>
