<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F6"
    tools:context=".HomeActivity">

    <!-- Scrollable Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="#F2F3F6">

            <!-- HEADER + DASHBOARD SECTION -->

            <!-- WHITE SECTION BELOW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F4F9"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingTop="36dp"
                android:paddingBottom="32dp">

                <!-- HEADER -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard"
                        android:textColor="#252243"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_profile_circle_elevated"
                        android:clipToOutline="true"
                        android:contentDescription="Profile"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar_nate" />
                </RelativeLayout>

                <!-- DASHBOARD CARDS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- ADD BILL -->
                    <LinearLayout
                        android:id="@+id/cardAddBill"
                        android:layout_width="70dp"
                        android:layout_height="190dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_dashboard_add_bill"
                        android:clickable="true"
                        android:clipToOutline="true"
                        android:elevation="2dp"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            android:tint="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Add Bill"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- TOTAL BILL -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_dashboard_total"
                        android:clipToOutline="true"
                        android:elevation="2dp"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_receipt"
                            android:tint="#F5F5F8" />

                        <TextView
                            android:id="@+id/tvTotalBill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="₹0.00"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Total Bill"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- SPLIT EXPENSES -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="190dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_dashboard_split"
                        android:clipToOutline="true"
                        android:elevation="2dp"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_split"
                            android:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/tvSplitExpense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="₹0.00"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Split Expenses"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_home_top_rounded"
                android:elevation="26dp"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingTop="24dp"
                android:paddingBottom="90dp"
                android:translationY="-25dp">

                <!-- RECENT FRIENDS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recent Friends"
                    android:textColor="#252243"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <include layout="@layout/item_friend_avatar" />
                    <include layout="@layout/item_friend_avatar_1" />
                    <include layout="@layout/item_friend_avatar_2" />
                    <include layout="@layout/item_friend_avatar_3" />
                </LinearLayout>

                <!-- SHARING SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="Who's sharing the bill"
                    android:textColor="#252243"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <include layout="@layout/item_friend_avatar_5" />
                    <include layout="@layout/item_friend_avatar_6" />
                </LinearLayout>

                <!-- RECENT TRANSACTIONS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recent Transactions"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#252243"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="12dp" />

                <!-- Card-Like RecyclerView Container -->
                <LinearLayout
                    android:id="@+id/recentTransactionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_home"
                    android:elevation="6dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:clipToOutline="true"
                    android:layout_marginBottom="20dp">

                    <!-- RecyclerView for real data -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recentTransactionsRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false"
                        android:paddingVertical="4dp"
                        android:visibility="gone" />

                    <!-- Empty state preview -->
                    <LinearLayout
                        android:id="@+id/emptyStateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_empty_wallet"
                            android:tint="#C0C0C0"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No recent expenses yet"
                            android:textColor="#252243"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start tracking your bills to see them here!"
                            android:textColor="#7A7A7A"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_nav_floating"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
