<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F9"
    tools:context=".ExpenseActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="85dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="20dp">

            <!-- HEADER -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text="Track Your Expense"
                    android:textColor="#252243"
                    android:textSize="22sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <!-- GREETING -->
            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello, Nate!"
                android:textColor="#252243"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- BALANCE HEADER -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvTotalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Balance"
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/monthSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:elevation="3dp"
                    android:background="@drawable/bg_dropdown"
                    android:clipToOutline="true">

                    <TextView
                        android:id="@+id/tvSelectedMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="November 2025"
                        android:textColor="#252243"
                        android:textSize="13sp"
                        android:layout_marginEnd="4dp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_down_arrow"
                        android:tint="#252243" />
                </LinearLayout>

            </RelativeLayout>

            <!-- TOTAL BALANCE -->
            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹92,873.12"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#252243"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />

            <!-- EXPENSE / INCOME CARDS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingBottom="10dp">

                <!-- EXPENSE CARD -->
                <LinearLayout
                    android:id="@+id/cardExpense"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:elevation="6dp"
                    android:gravity="center"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_dashboard_total"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_expense"
                        android:tint="#FFFFFF"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expenses"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvExpenseAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0.00"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- INCOME CARD -->
                <LinearLayout
                    android:id="@+id/cardIncome"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:elevation="6dp"
                    android:gravity="center"
                    android:background="@drawable/bg_dashboard_split"
                    android:clipToOutline="true">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_income"
                        android:tint="#FFFFFF"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Income"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvIncomeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0.00"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- TRANSACTIONS HEADER -->
            <TextView
                android:id="@+id/tvTransactionsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#252243"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <!-- NO TRANSACTIONS PLACEHOLDER -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_no_data"
                    android:tint="#A0A0A0"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No transactions yet"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start by adding your first expense!"
                    android:textSize="14sp"
                    android:textColor="#9A9A9A"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- TRANSACTION LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/expenseRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="80dp"
                android:clipToPadding="false"
                android:layoutAnimation="@anim/layout_fade_in" />
        </LinearLayout>
    </ScrollView>

    <!-- Floating Nav Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_nav_floating"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
