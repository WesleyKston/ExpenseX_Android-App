<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottomsheet_rounded"
    android:padding="20dp"
    android:clipToPadding="false">

    <!-- Handle bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_bottomsheet_handle" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Members"
        android:textColor="#252243"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Member List -->
    <LinearLayout
        android:id="@+id/memberListContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Member Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/avatar_nathan"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_profile_circle_elevated"
                android:padding="4dp"
                android:clipToOutline="true"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nathan"
                android:textSize="16sp"
                android:textColor="#252243" />

            <CheckBox
                android:id="@+id/checkNathan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#5161F1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE" />

        <!-- Member 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/avatar_michele"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_profile_circle_elevated"
                android:padding="4dp"
                android:clipToOutline="true"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Michele"
                android:textSize="16sp"
                android:textColor="#252243" />

            <CheckBox
                android:id="@+id/checkMichele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#5161F1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE" />

        <!-- Member 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/avatar_jugram"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_profile_circle_elevated"
                android:padding="4dp"
                android:clipToOutline="true"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jugram"
                android:textSize="16sp"
                android:textColor="#252243" />

            <CheckBox
                android:id="@+id/checkJugram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#5161F1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE" />

        <!-- Member 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/avatar_ryan"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_profile_circle_elevated"
                android:padding="4dp"
                android:clipToOutline="true"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ryan"
                android:textSize="16sp"
                android:textColor="#252243" />

            <CheckBox
                android:id="@+id/checkRyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#5161F1" />
        </LinearLayout>
    </LinearLayout>

    <!-- Done Button -->
    <Button
        android:id="@+id/btnConfirmMembers"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:text="Confirm Selection"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/bg_button_gradient"
        android:elevation="6dp" />

</LinearLayout>
